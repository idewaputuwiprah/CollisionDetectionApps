<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentEditData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <EditText
            android:id="@+id/NIK"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_without_line"
            android:drawableStart="@drawable/nik2"
            android:drawableLeft="@drawable/nik2"
            android:drawablePadding="10dp"
            android:fontFamily="@font/segoe_ui"
            android:hint="NIK"
            android:paddingLeft="10dp"
            android:textColorHint="#CFD2FC"
            android:inputType="number"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_without_line"
            android:drawableStart="@drawable/user"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="18dp"
            android:fontFamily="@font/segoe_ui"
            android:hint="Nama"
            android:paddingLeft="10dp"
            android:textColorHint="#CFD2FC" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_without_line"
            android:cursorVisible="false"
            android:drawableStart="@drawable/calendar"
            android:drawableLeft="@drawable/calendar"
            android:drawableEnd="@drawable/dropdown2"
            android:drawableRight="@drawable/dropdown2"
            android:paddingRight="10dp"
            android:drawablePadding="13dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/segoe_ui"
            android:hint="Tanggal Lahir"
            android:paddingLeft="10dp"
            android:textColorHint="#CFD2FC" />

        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_without_line"
            android:drawableStart="@drawable/location"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="18dp"
            android:fontFamily="@font/segoe_ui"
            android:hint="Alamat"
            android:paddingLeft="10dp"
            android:textColorHint="#CFD2FC" />

        <EditText
            android:id="@+id/nomor_user"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_without_line"
            android:drawableStart="@drawable/phone_call"
            android:drawableLeft="@drawable/phone_call"
            android:drawablePadding="15dp"
            android:fontFamily="@font/segoe_ui"
            android:hint="No. Handphone"
            android:paddingLeft="10dp"
            android:textColorHint="#CFD2FC"
            android:inputType="number"/>

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Save"
            android:textColor="#FDFDFD" />

    </LinearLayout>

</FrameLayout>